        <Button Content="=" HorizontalAlignment="Left" Margin="271,110,0,0" VerticalAlignment="Top" Width="60" Height="65" Click="Button_Click_CAL"/>
        <TextBox Name="ResultText" HorizontalAlignment="Left" Height="321" Margin="10,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320"/>

    </Grid>
