        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="541.702" Width="348.11">
    <Grid>
        <TextBox  Name="ResultLabel" Text="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="320" Background="MediumAquamarine" Height="26"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="Button_Click_7"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="75,41,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="Button_Click_8"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="140,41,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="Button_Click_9"/>
